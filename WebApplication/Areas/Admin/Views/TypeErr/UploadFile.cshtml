@model List<WebApplication.Models.Type_Err>
@{
    ViewBag.Title = "TypeErr";
    var index = 0;
    var done = 0;
    var fail = 0;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Form</div>
                <div class="card-body">
                    @using (Html.BeginForm("UploadFile", "TypeErr", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="input-group mb-3">
                            <div class="col-md-8">
                                <input type="file" name="UploadedFile" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary"><i class="ti ti-upload"></i> Upload</button>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="col-md-6">
                                <a href="~/File/temp_typeerr.xlsx" class="btn btn-outline-warning"><i class="ti ti-file"></i> File mẫu</a>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Database</div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã lỗi</th>
                                <th>Mô tả hiện tượng</th>
                                <th>Gợi ý nguyên nhân</th>
                                <th>Gợi ý khắc phục</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Reason</td>
                                    <td>@item.Overcome</td>
                                    <td>
                                        @if (item.Id == 0)
                                        {
                                            <span class="text-danger">chưa lưu được</span>
                                            fail++;
                                        }
                                        else
                                        {
                                            <span class="text-success">thành công</span>
                                            done++;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                Tài thành công: <content class="text-success">@done</content> --- tải thất bại: <content class="text-danger">@fail</content>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>

